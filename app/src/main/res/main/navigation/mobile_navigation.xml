<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/mobile_navigation"
    app:startDestination="@id/nav_graph_meal"
    >

  <fragment
      android:id="@+id/nav_food_details"
      android:name="com.machfour.macrosapp2.fooddetails.FoodDetailsFragment"
      android:label="fragment_food_details"
      >
    <argument
        android:name="foodId"
        app:argType="long"
        />
  </fragment>

  <navigation
      android:id="@+id/nav_graph_meal"
      app:startDestination="@id/nav_day_pager"
      >
    <fragment
        android:id="@+id/nav_day_pager"
        android:name="com.machfour.macrosapp2.daypager.DayPagerFragment"
        android:label="fragment_day_pager"
        >
      <argument
          android:name="initialDay"
          android:defaultValue="@null"
          app:argType="string"
          app:nullable="true"
          />
    </fragment>
    <fragment
        android:id="@+id/nav_meal_details"
        android:name="com.machfour.macrosapp2.mealdetails.MealDetailsFragment"
        android:label="fragment_meal_details"
        >
      <argument
          android:name="mealIds"
          app:argType="long[]"
          />
      <argument
          android:name="day"
          app:argType="string"
          />
    </fragment>
    <dialog
        android:id="@+id/nav_meal_input"
        android:name="com.machfour.macrosapp2.mealinput.MealInputDialog"
        android:label="fragment_meal_input"
        >
      <argument
          android:name="initialDay"
          app:argType="string"
          />
      <argument
          android:name="editId"
          app:argType="long"
          />

    </dialog>

    <fragment
        android:id="@+id/nav_fp_input"
        android:name="com.machfour.macrosapp2.foodportioninput.FpInputDialog"
        android:label="fragment_fp_input"
        >
      <argument
          android:name="initialDay"
          app:argType="string"
          />
      <argument
          android:name="initialMeal"
          app:argType="long"
          />
      <argument
          android:name="editId"
          app:argType="long"
          />
    </fragment>
    <action
        android:id="@+id/add_new_meal"
        app:destination="@id/nav_meal_input"
        app:launchSingleTop="true"
        />
    <action
        android:id="@+id/add_new_fp"
        app:destination="@id/nav_fp_input"
        app:launchSingleTop="true"
        />
    <action
        android:id="@+id/show_meal_details"
        app:destination="@id/nav_meal_details"
        app:launchSingleTop="true"
        app:popUpToInclusive="false"
        />
  </navigation>
  <fragment
      android:id="@+id/nav_debug"
      android:name="com.machfour.macrosapp2.debug.DebugFragment"
      android:label="fragment_debug"
      />

</navigation>